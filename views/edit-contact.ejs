<div class="container mt-4">
  <div class="row">
    <div class="col-md-6">
      <h2>Form Ubah Contact</h2>
      <% if (typeof errors != 'undefined') { %>
      <div class="alert alert-danger fw-bold" role="alert">
        <ul>
          <% errors.forEach(element => { %>
          <li><%= element.msg %></li>
          <% }) %>
        </ul>
      </div>
      <% } %>
      <form method="POST" action="/contact?_method=PUT">
        <input type="hidden" name="id" value="<%= contact._id %>" id="">
        <input
          type="hidden"
          name="namaLama"
          value="<%= contact.namaLama || contact.nama %>"
        />
        <div class="mb-3">
          <label for="nama" class="form-label">Nama</label>
          <input
            type="text"
            class="form-control"
            id="nama"
            name="nama"
            value="<%= contact.nama %>"
            required
          />
        </div>

        <div class="mb-3">
          <label for="email" class="form-label">email</label>
          <input
            type="email"
            class="form-control"
            id="email"
            name="email"
            value="<%= contact.email %>"
            required
          />
        </div>

        <div class="mb-3">
          <label for="noHp" class="form-label">noHp</label>
          <input
            type="text"
            class="form-control"
            id="noHp"
            name="noHp"
            value="<%= contact.noHp %>"
            required
          />
        </div>

        <button type="submit" class="btn btn-primary">Ubah data Kontak</button>
      </form>
    </div>
  </div>
</div>
